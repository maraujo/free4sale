<!DOCTYPE html>
<html lang="${request.locale_name}">
  <head metal:use-macro="master.macros['head']">
    <link href="${request.static_url('free4sale:static/css/shop-homepage.css')}" rel="stylesheet" />
</head>
<body>

   <macro metal:use-macro="master.macros['nav']">
   </macro>
   <div class="container">
    <div class="row">
        <div><h2>People Registered:</h2></div>
    </div>
    <div class="row">
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                </tr>
            </thead>
            <tbody>
                <tal:for repeat="person persons" >
                    <tr>
                        <td>${person.id}</td>
                        <td>${person.fname}</td>
                    </tr>
                </tal:for>
            </tbody>
        </table>
    </div>
    
    <div class="row">
        <div><h2>Products Registered:</h2></div>
    </div>
     <div class="row">
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                <tal:for repeat="product products" >
                    <tr>
                        <td>${product.id}</td>
                        <td>${product.name}</td>
                    </tr>
                </tal:for>
            </tbody>
        </table>
    </div>
</div>
</body>
</html>
